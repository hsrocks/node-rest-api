<% include ./partials/header %>

    <div class="ui huge header">Todos</div>
    <div class="ui top  attached segment">
        <div class="ui divided items">
          <% if(todos.length==0){ %>
            <div class="content">
            <%  if(!currentUser) { %>
                <p>Hi There!!!!!! . You dont Have Any Todos. Please Add Some</p>
                <a href="/todos/" class="item">New Todo</a>
            <% } else { %>
              <p>Hi <%= currentUser.name %>. You dont Have Any Todos. Please Add Some</p>
              <a href="/todos/" class="item">New Todo</a>
              <% } %>
            </div>
          <% } %>
            <% todos.forEach(function(todo){ %>
                <div class="item">
                    <div class="content">
                         <a class="header" href="/todos/<%= todo._id %>"><%=todo.title%></a>
                         <div class="meta">
                            <p><span>Added By - <%= todo.author.name %></span></p>
                            <p><span>Due Date : <%= todo.dueDate.toDateString() %></span></p>
                         </div>
                         <div class="description">
                             <p><%- todo.body.substring(0, 100) %>...</p>
                         </div>
                         <div class="extra">
                             <a class="ui floated basic violet button" href="/todos/<%= todo._id %>">
                                 Read More
                                <span class="arrow"><i class="right chevron icon"></i></span>
                             </a>
                         </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<% include ./partials/footer %>
